{
  "name": "jayvicsanantonio.dev",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prebuild": "pnpm check && pnpm type-check",

    "check": "biome check .",

    "fix": "pnpm run fix:code && pnpm run fix:content",
    "fix:code": "biome check --write .",
    "fix:content": "prettier --write \"**/*.{css,md,mdx}\"",

    "format": "pnpm run format:code && pnpm run format:content",
    "format:code": "biome format --write .",
    "format:content": "prettier --write \"**/*.{css,md,mdx}\"",

    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true pnpm build"
  },
  "dependencies": {
    "@iconify/react": "^4.1.1",
    "@sentry/nextjs": "^9.12.0",
    "@tailwindcss/postcss": "^4.1.3",
    "@vercel/analytics": "^1.2.2",
    "@vercel/speed-insights": "^1.0.10",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "framer-motion": "^11.11.11",
    "next": "^15.3.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sonner": "^2.0.3",
    "tailwind-merge": "^2.3.0",
    "web-vitals": "^4.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@lhci/cli": "^0.14.0",
    "@next/bundle-analyzer": "^15.0.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@types/node": "^20",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "postcss": "^8.5.3",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.3",
    "typescript": "^5",
    "zod": "^4.1.5"
  }
}
