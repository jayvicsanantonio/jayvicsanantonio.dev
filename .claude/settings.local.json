{
  "permissions": {
    "allow": [
      "Bash(pnpm build:*)",
      "Bash(npx prettier:*)",
      "Bash(pnpm check:*)",
      "mcp__playwright__browser_navigate",
      "Bash(pnpm dev:*)",
      "Bash(npm run lint)",
      "Bash(npm run:*)",
      "mcp__playwright__browser_evaluate",
      "mcp__playwright__browser_close",
      "Bash(git shortlog:*)",
      "Bash(pnpm install:*)",
      "Bash(pnpm fix:content:*)",
      "Bash(mkdir:*)",
      "Bash(pnpm dlx lighthouse:*)",
      "Bash(pnpm type-check:*)",
      "Bash(pnpm fix:*)",
      "Bash(pntml type-check:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR\" && pnpm check",
            "timeout": 60
          }
        ]
      }
    ]
  }
}